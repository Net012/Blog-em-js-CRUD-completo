<%- include ("../../partials/header.ejs") %>
    <%- include ("../../partials/navbar.ejs") %>

        <div class="container">
            <div>
                <hr>
                <h2>Usuários</h2>
                <hr>
                <a class="btn btn-outline-success mb-4" href="/admin/users/create">Criar novo usuário</a>
            </div>

            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>

                    <% users.forEach(user=>{ %>
                        <tr>
                            <td><%= user.id %> </td>
                            <td><%= user.email %></td>
                        </tr>
                        <% }) %>


                </tbody>

            </table>

        </div>


        <%- include ("../../partials/footer.ejs") %>