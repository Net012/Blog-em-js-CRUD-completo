<%- include ("../../partials/header.ejs") %>
    <%- include ("../../partials/navbar.ejs") %>

        <div class="container">
            <div>
                <hr>
                <h2>Artigos</h2>
                <hr>
                <a class="btn btn-outline-success mb-4" href="/admin/articles/new">Criar novo artigo</a>
            </div>

            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>

                    <% articles.forEach(article=>{ %>
                        <td> <%= article.id %> </td>
                        <td> <%= article.title %> </td>
                        <td> <%= article.category.title %> </td>
                        <td>
                            <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-outline-secondary">Editar</a>
                                <form method="post" action="/articles/delete" onsubmit="confDel(event, this)" style="display: inline;" >
                                    <input type="hidden" name="id" value="<%= article.id %>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                        </td>
                  <% }) %>

                </tbody>
                
            </table>

        </div>


<%- include ("../../partials/footer.ejs") %>

<script>
    function confDel(event, form) {
         event.preventDefault()
         const decision = confirm("Voce realmente deseja deletar este artigo?")
         if (decision) {
            form.submit();
         }
    }
</script>