<%- include ("../../partials/header.ejs") %>
    <%- include ("../../partials/homenavbar.ejs") %>

        <h2>Ol√° Mundo!</h2>

        <div class="container mt-5">

            <% result.articles.rows.forEach(article=>{ %>
                
                <div class="card my-3 ">

                    <div class="card-header">

                        <h2> <%= article.title %> </h2>

                    </div>

                    <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-outline-primary">Ler artigo</a>
                    </div>

                </div>

                <% }) %>

                <div class="row">
                    <div class=" my-2 col col-12 ">

                        <% if(result.page > 2) { %>

                            <a style="float: left;" href="/articles/page/<%= result.page -1 %> " class="btn btn-dark"> Anterior </a>

                            <% } else if(result.page == 2){%>
                                <a style="float: left;" href="/" class="btn btn-dark"> Anterior </a>
                                <% }%> 

                        

                        <% if(result.next) {%>
                            <a style="float: right;" href="<%= result.page + 1 %> " class="btn btn-dark" >Proxima</a>
                            <% } %>    
                    </div>
                    
                </div>

        </div>

        <%- include ("../../partials/footer.ejs") %>