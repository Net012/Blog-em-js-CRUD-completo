<%- include ("../../partials/header.ejs") %>
    <%- include ("../../partials/navbar.ejs") %>

        <div class="container">
            <div>
                <hr>
                <h2>Categorias</h2>
                <hr>
                <a class="btn btn-outline-success mb-4" href="/admin/categories/new">Criar nova categoria</a>
            </div>

            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>

                    <% categories.forEach(category =>{ %>
                        <tr>
                            <th><%= category.id %></th>
                            <th><%= category.title %></th>
                            <th>
                                <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-outline-secondary">Editar</a>

                                <form method="post" action="/categories/delete" onsubmit="confDel(event, this)" style="display: inline;" >
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>

                                
                            </th>
                        </tr>
                    <% }) %>


                </tbody>
                
            </table>

        </div>


<%- include ("../../partials/footer.ejs") %>

<script>
    function confDel(event, form) {
         event.preventDefault()
         const decision = confirm("Voce realmente deseja deletar esta categoria?")
         if (decision) {
            form.submit();
         }
    }
</script>